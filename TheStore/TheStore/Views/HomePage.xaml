<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TheStore.ViewModels"
             x:Class="TheStore.Views.HomePage"
             Title="Home">

    <ContentPage.BindingContext>
        <local:HomePageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="user.png" Command="{Binding GoToUserCommand}" />
        <ToolbarItem IconImageSource="cart.png" Command="{Binding GoToCartCommand}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Image x:Name="Header" Source="TheStore.png" />

                <Image Source="" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                <Image Source="" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <StackLayout Orientation="Vertical">
                        <Button Text="Jeans" ImageSource="jeans.jpg" ContentLayout="Top,0" HorizontalOptions="Center" Command="{Binding GoToJeansCommand}" WidthRequest="200" BackgroundColor="White" TextColor="Black"/>
                        <Button Text="T-Shirts" ImageSource="tshirts.png" ContentLayout="Top,0" HorizontalOptions="Center" Command="{Binding GoToTshirtsCommand}" WidthRequest="200" BackgroundColor="White" TextColor="Black"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Button Text="Jackets" ImageSource="jackets.jpg" ContentLayout="Top,0" Command="{Binding GoToJacketsCommand}" WidthRequest="200" BackgroundColor="White" TextColor="Black"/>
                        <Button Text="Shoes" ImageSource="shoes.jpg" ContentLayout="Top,0" Command="{Binding GoToShoesCommand}" WidthRequest="200" BackgroundColor="White" TextColor="Black"/>
                    </StackLayout>
                </StackLayout>
                <Label Text="TheStore - 2021" FontSize="Small" HorizontalOptions="Center" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>