                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="{Binding SelectedJacket.Name}"
                               TextColor="Black"
                               FontSize="32"
                               FontAttributes="Bold"
                               Margin="15"
                               />
                    <StackLayout Grid.Column="1"
                                         VerticalOptions="Center">
                        <Label Text="{Binding SelectedJacket.Price}"
                                   
                                   TextColor="Red"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   Margin="15"
                                   />
                    </StackLayout>
                </Grid>

                <Grid VerticalOptions="FillAndExpand"
                      Margin="0,-20,0,0"
                      Padding="0">

                    <Frame CornerRadius="25">
                        <StackLayout>

                            <xct:TabView
                                        TabStripPlacement="Top"
                                        TabStripBackgroundColor="Transparent"
                                        TabStripHeight="60"
                                        TabIndicatorColor="red"
                                        TabContentBackgroundColor="Transparent"
                                        Margin="-20">

                                <xct:TabViewItem
                                        Icon="triangle.png"
                                        Text="Description"
                                        TextColor="black"
                                        TextColorSelected="Red"
                                        FontSize="16">
                                    <Grid 
                                        BackgroundColor="Transparent">
                                        <Label
                                        HorizontalOptions="Start"
                                        VerticalOptions="Start"
                                        Text="{Binding SelectedJacket.Description}"
                                        TextColor="black"
                                        Margin=" 30"/>
                                    </Grid>
                                </xct:TabViewItem>

                                <xct:TabViewItem
                                        Icon="info.png"
                                        Text="Reviews"
                                        TextColor="Black"
                                        TextColorSelected="red"
                                        FontSize="16">
                                    <Grid>
                                        <Label    
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                        Text="Here are the reviews fro users" />
                                    </Grid>
                                </xct:TabViewItem>
                            </xct:TabView>


                            <!--<Label Text="{Binding SelectedPlace.Description}"
                                   FontSize="18"
                                   Margin="10,20"/>-->
                        </StackLayout>



                        <!--Xamarin Community Toolkit , using for tabs-->
                        <!--<Grid>
                            <xyt:TabView Style="{StaticResource TabStyle}">
                                <xyt:TabViewItem >
