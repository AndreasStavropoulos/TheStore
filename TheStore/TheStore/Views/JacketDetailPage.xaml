             x:Class="TheStore.Views.JacketDetailPage">
    <ContentPage.BindingContext>
        <local:JacketDetailPageViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <Grid>
            <StackLayout VerticalOptions="FillAndExpand">
                <Grid>

                    <Frame HeightRequest="400" Padding="0" BackgroundColor="Black">
                        <Image Source="{Binding SelectedJacket.ImgUrl}"
                           HeightRequest="400"
                           Aspect="AspectFill"
                           Opacity="0.9"/>
                    </Frame>
                    <!--<StackLayout VerticalOptions="EndAndExpand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding SelectedJacket.Name}"
                               TextColor="White"
                               FontSize="32"
                               FontAttributes="Bold"
                               Margin="15"
                               />
                            <StackLayout Grid.Column="1"
                                         VerticalOptions="Center">
                                <Label Text="{Binding SelectedJacket.Price}"
                                   
